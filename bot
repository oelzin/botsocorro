async def on_member_join(member):
  canal = client.get_channel("480073377269415951")
  regras = client.get_channel("484798497250476042")
  msg = "Ol√°! Seja bem-vindo ao servidor do Habby {}! Antes de mais nada leia as {}! Espero que divirta-se em nosso servidor, qualquer coisa estou aqui 24hrs por dia! At√©!".format(member.mention, regras.mention)
  await client.send_message(member, msg)

client.run('NDg4MDc0NDk3NjA2Mjg3NDEx.DnW65Q.M7TrPsmo8FHaFjElKv1ZrPJb-Qw')
