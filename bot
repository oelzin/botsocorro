        await client.send_message(message.channel, "Coragem, n√©? N√£o vou dizer o que...")

     if message.content.startswith(':ajuda'):
        await client.send_message(message.author, '**Oi {}! Para te ajudar preciso saber a sua d√∫vida, exemplo: Promo√ß√£o, bugs, problemas na minha conta...**'.format(message.author.mention))
