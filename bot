     if message.content.startswith(':pausarcota'):
        await client.send_message(message.author, 'Estou aqui para fazer uma pausa na sua cota! Me informe quantos eventos voc√™ realizou at√© agora!'.format(message.author.mention))
        jogador = await client.wait_for_message(author=message.author)
